<header>
  <div class="actions header-actions">
    <%= link "Edit", to: income_path(@conn, :edit, @income), class: "button--ghost" %>
    <%= link "Delete", to: income_path(@conn, :delete, @income), method: :delete, data: [confirm: "Are you sure?"], class: "button--ghost" %>
  </div>
  <h2><%= @income.name %></h2>
</header>

<p>
  <span class="label label-inline">Dates:</span>
  <%= Enum.map_join(@income.dates, ", ", &(Number.Human.number_to_ordinal(&1))) %>
</p>

<p>
  <span class="label label-inline">Amount:</span>
  <%= Number.Currency.number_to_currency @income.amount %>
</p>
