<article class="card">
  <div class="card-actions">
    <%= link "Edit", to: goal_path(@conn, :edit, @goal), class: "button--ghost" %>
  </div>

  <h3>
    <img src="<%= get_logo @goal.url %>" alt="<%= get_initial @goal.name %>" class="card-icon">
    <%= link @goal.name, to: goal_path(@conn, :show, @goal) %>
  </h3>

  <p>
    <span class="label label-inline">Amount</span>
    <%= Number.Currency.number_to_currency @goal.amount %>
  </p>
</article>
