<nav class="header-actions">
  <div>
    <span class="label label-inline">Total:</span>
    <%= Number.Currency.number_to_currency @total %>
  </div>
  <%= link "Add", to: goal_path(@conn, :new), class: "button--ghost" %>
</nav>
<h2>Goals</h2>

<div class="card-list">
  <%= for goal <- @goals do %>
    <%= render("_card.html", conn: @conn, goal: goal) %>
  <% end %>
</div>
